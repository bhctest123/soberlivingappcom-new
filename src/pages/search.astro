---
import { getCollection } from 'astro:content';
import BaseLayout from '@/layouts/BaseLayout.astro';
import { SearchInterface } from '@/components/search';
import type { CollectionEntry } from 'astro:content';

// Get all blog posts for search
const allPosts = await getCollection('blog', ({ data }: CollectionEntry<'blog'>) => {
  return data.draft !== true;
});

// Prepare search data
const searchData = allPosts.map((post: CollectionEntry<'blog'>) => ({
  slug: post.slug,
  title: post.data.title,
  description: post.data.description,
  content: post.body,
  date: post.data.date,
  author: post.data.author,
  category: post.data.category,
  tags: post.data.tags || [],
  image: post.data.image,
  imageAlt: post.data.imageAlt,
  featured: post.data.featured,
  url: `/sober-living-app-blog/${post.data.date.getUTCFullYear()}/${post.data.date.getUTCMonth() + 1}/${post.data.date.getUTCDate()}/${post.slug}`,
}));

// Get unique categories and tags for filters
const allCategories = [...new Set(allPosts.flatMap((post: CollectionEntry<'blog'>) => post.data.category))].sort() as string[];
const allTags = [...new Set(allPosts.flatMap((post: CollectionEntry<'blog'>) => post.data.tags || []))].sort() as string[];
---

<BaseLayout 
  title="Search Blog Posts - Sober Living App"
  description="Search through our comprehensive collection of sober living resources, guides, and industry insights. Find exactly what you need to help your recovery residence succeed."
>
  <main class="min-h-screen bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">
          Search Blog Posts
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Search through our comprehensive collection of sober living resources, guides, and industry insights. 
          Find exactly what you need to help your recovery residence succeed.
        </p>
      </div>

      <!-- Search Interface -->
      <SearchInterface 
        searchData={searchData}
        categories={allCategories}
        tags={allTags}
        client:load
      />
    </div>
  </main>
</BaseLayout>